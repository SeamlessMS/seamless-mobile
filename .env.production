# Server Configuration
NODE_ENV=production
PORT=3000
AUTH_PORT=3001
PAYMENT_PORT=3002

# JWT Configuration
JWT_SECRET=your_production_jwt_secret_key
JWT_EXPIRES_IN=24h

# Stripe Configuration
STRIPE_SECRET_KEY=your_production_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=your_production_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=your_production_stripe_webhook_secret

# Zoho Configuration
ZOHO_CLIENT_ID=your_production_zoho_client_id
ZOHO_CLIENT_SECRET=your_production_zoho_client_secret
ZOHO_REFRESH_TOKEN=your_production_zoho_refresh_token
ZOHO_ORG_ID=your_production_zoho_org_id
ZOHO_DEPARTMENT_ID=your_production_zoho_department_id

# Frontend URL
FRONTEND_URL=https://your-production-domain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100
LOGIN_RATE_LIMIT_MAX_REQUESTS=5
PAYMENT_RATE_LIMIT_MAX_REQUESTS=10

# Monitoring Thresholds
ERROR_RATE_THRESHOLD=0.05  # 5%
RESPONSE_TIME_THRESHOLD=1000  # 1 second
CRITICAL_RESPONSE_TIME_THRESHOLD=500  # 500ms
RATE_LIMIT_BREACH_THRESHOLD=5

# Logging
LOG_LEVEL=info
LOG_MAX_SIZE=5242880  # 5MB
LOG_MAX_FILES=5
LOG_DIR=logs

# Security
CORS_ORIGIN=https://your-production-domain.com
COOKIE_SECURE=true
COOKIE_HTTP_ONLY=true
COOKIE_SAME_SITE=strict

# Email Configuration
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
ALERT_EMAIL=support@seamlessms.net

# Monitoring
ENABLE_MONITORING=true
ALERT_THRESHOLD_ERROR_RATE=0.05
ALERT_THRESHOLD_RESPONSE_TIME=500
ALERT_THRESHOLD_RATE_LIMIT=1000
ALERT_THRESHOLD_CPU=90
ALERT_THRESHOLD_MEMORY=90 