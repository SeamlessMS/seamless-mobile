{
  "version": 3,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node",
      "config": {
        "maxDuration": 60
      }
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/submit-ticket",
      "dest": "/api/submit-ticket.js"
    },
    {
      "src": "/(.*)",
      "dest": "public/$1"
    }
  ],
  "env": {
    "ZOHO_ORG_ID": "@zoho_org_id",
    "ZOHO_CLIENT_ID": "@zoho_client_id",
    "ZOHO_CLIENT_SECRET": "@zoho_client_secret",
    "ZOHO_REFRESH_TOKEN": "@zoho_refresh_token",
    "ZOHO_DEPARTMENT_ID": "@zoho_department_id",
    "NEXT_PUBLIC_API_URL": "@next_public_api_url",
    "NEXT_PUBLIC_AUTH_API_URL": "@next_public_auth_api_url"
  },
  "git": {
    "deploymentEnabled": {
      "master": true
    }
  }
} 